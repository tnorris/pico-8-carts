function race_move_handler(data)
 if data == ⬅️ then
   player.x= player.x-player.h_co
 end
 if data == ➡️ then
   player.x= player.x+player.h_co
 end
 if data == ❎ then
   player.s= mid(0, player.s+1, 50)
 end
 if data == 🅾️ then
   player.s= mid(0, player.s-1, 50)
 end
end

function race_update(data)
  player.z += player.s
end

function car()
 sspr(8, 0,--sheet x,y
      24, 24, --sheet w,h
      player.x, 95, --canvas x,y
      24,24) --width, height
end

