function get_segment_height(sl)
  sl=128-sl
  --local n=256
  local n=64*6
  return n/sl
end


function road()
-- throw some graphics onto
-- the screen, fam
 local tex_offset=31
 local tex_pos=0
 local road_width=104
 -- 31 = light
 -- 30 = dark

 local x_o=0 --x offset
 local y_o=0 -- height of the dashboard
 for sl=128,58,-1 do
  local seg_height=get_segment_height(sl+(player.z%64))
  x_o=flr((127-sl)*0.67)
  tex_pos = (tex_pos + 1)%(seg_height*2)
  if (tex_pos>seg_height) then
    tex_offset=31
  else
    tex_offset=30
  end

  sspr(0, tex_offset,--sheet x,y
       road_width, 1, --sheet w,h
       x_o+(128-road_width)/2, sl+y_o, --canvas x,y
       104-(x_o*2), 1) --width, height
 end
end
